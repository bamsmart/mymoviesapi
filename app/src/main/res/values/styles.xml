<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LabelContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LabelContent.Title">
        <item name="android:textColor">@color/colorGreyDarker</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@color/colorBluePrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.SubTitle">
        <item name="android:textColor">@color/colorGreyDarker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.Field">
        <item name="android:textColor">@color/colorGreyDarker</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.Field.GreyDark">
        <item name="android:textColor">@color/colorGreyDarker</item>
    </style>


</resources>
